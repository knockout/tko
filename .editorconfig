root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_size = 2

[{Makefile,**.mk}]
indent_size = 4
indent_style = tab

[{*.js,*.ts}]
indent_style = space
indent_size = 2

[{package.json,*.yml,*.cjson,*.html}]
indent_style = space
indent_size = 2
