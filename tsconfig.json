{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "es2019.array", // for .flat and .flatMap
      "es2019.object", // for Object.fromEntries
    ],
    // "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "importHelpers": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tko/*": ["packages/*/src/index.js"],
      "*": ["*"],
    },
    "outDir": "dist/",
    // "traceResolution": true,
  },
  "include": ["packages/*/src/*.ts", "packages/*/src/*.js"],
  // "files": ["packages/*/src/index.js"],
  "exclude": ["node_modules", "**/spec/*"],
}
